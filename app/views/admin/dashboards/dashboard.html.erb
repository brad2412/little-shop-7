<h1>Admin Dashboard</h1>

<%= link_to "admin merchants", "/admin/merchants" %><br>
<%= link_to "admin invoices", "/admin/invoices" %>

<h2>Best Customers</h2>
<% @customers.top_5_customers.each do |customer|%>
  <p>
    Name: <%= customer.first_name %>, <%= customer.last_name %><br>
    Transactions made: <%= customer.transaction_counter %>
  </p>
<% end %>

<section id = "Incomplete_Invoices">
  <h2> Incomplete Invoices </h2>
  <% @invoices.incomplete_orders.each do |invoice| %>
    <%= link_to "ID: #{invoice.id}", "/admin/invoices/#{invoice.id}" %><br>
    <%= invoice.created_at.strftime("%A, %B %d, %Y") %><br>
  <% end %>
</section>
