<p>Merchants</p>

<%= @merchants.each do |merchant| %>
  <p>
  Name: <%= link_to  "#{merchant.name}", "merchants/#{merchant.id}" %><br>
  Status: <%= merchant.current_status %>
    <%= form_with url: "/admin/merchants/:id", method: :patch, local: true do |f| %>
      <%= hidden_field_tag :status, "0" %>
      <%= f.submit "Disable Merchant" %>
    <% end %><br>

    <%= form_with url: "/admin/merchants/:id", method: :patch, local: true do |f| %>
      <%= hidden_field_tag :status, "1" %>
      <%= f.submit "Enable Merchant" %>
    <% end %>
  </p>
<% end %>
